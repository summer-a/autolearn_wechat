/**app.wxss**/
.container {
  height: 100%;
  box-sizing: border-box;
} 
.notice{
  position: absolute; 
  top:16rpx;
  height: 50rpx; 
  line-height: 50rpx;
  margin-left: 0px;
  font-size: 30rpx; 
  font-weight: 300;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  vertical-align: middle;
}
.border-fillet{
  width: 95%;
  margin: 20rpx auto;
  position: relative;
  z-index: 2;

  box-sizing: border-box;

  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 20rpx rgba(0,0,0,0.2);
}