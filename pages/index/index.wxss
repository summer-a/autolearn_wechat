/**index.wxss**/
.container{
  width: 100vw;
  margin: 0;
  box-sizing: border-box;
}
.courses{
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}
.icon{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon image{
  width: 170rpx;
  height: 120rpx;
}
.body{
  width: 350rpx;
  height: 140rpx;
  margin: 30rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  color: #3a3a3a;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.operate{
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 15rpx;
}
.operate button{
  
  text-align: center;
  font-size: 23rpx;
  font-family: '微软雅黑';
}

.options {
  display: flex;
  justify-content: space-around;
  align-items: center;

  font-family: '微软雅黑';
  font-size: 35rpx;
  font-weight: 500;
  height: 6vh;
  line-height: 6vh;
  border-bottom: 2rpx solid #ccc;

}
.options view{
  height: 100%;
  width: 28vw;
  text-align: center;
}

.swiper{
  width: 100vw;
  height: 65vh;
  margin: 20rpx auto;
}

.scroll-item {
  height: 100%;
}

.selected {
    border-bottom: 4rpx solid #8c97ff;
}
/** 角标 完成 */
.flag::before{
  content: '';
  position: absolute;
  top: -30rpx;
  left: -30rpx;
  border: 30rpx solid #cbcbcb;
  border-color:transparent #cbcbcb transparent transparent;
  transform: rotate(45deg);
}
.flag::after{
  content: '√';
  z-index: 2;
  position: absolute;
  color: #FFF;
  font-size: 20rpx;
  top: 5rpx;
  left: 5rpx;
}
/** 刷新 */
.refresh{
  width: 100%;
  display: flex;
  height: 65vh;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.refresh button {
  width: 200rpx;
}
.refresh view{
  width: 100%;
  height: 30rpx;
  font-size: 25rpx;
  text-align: center;
}

/** 两种解锁状态 */
.unlocked {
  background-color: #75c82b!important;
}
.locked {
  background-color: #4990ee!important;
}