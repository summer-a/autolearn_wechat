/**index.wxss**/

.container{
  width: 100vw;
  margin: 0;
}
.title {
  width: 100%;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
}
.courses{
  width: 100%;
  height: 200rpx;
  background-color: rgba(213, 242, 255, 0.233);
  border-top: 2rpx solid rgba(213, 242, 255, 0.8);
  border-bottom: 2rpx solid rgba(213, 242, 255, 0.8);
  margin: 20rpx 0;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.icon{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon image{
  width: 180rpx;
  height: 120rpx;
}
.body{
  width: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.operate{
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 15rpx;
}
.operate button{
  text-align: center;
  font-size: 25rpx;
  font-family: '微软雅黑';
}