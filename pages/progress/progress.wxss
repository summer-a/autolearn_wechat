/* pages/progress/progress.wxss */

.container{
  width: 100vw;
  margin: 0;
  box-sizing: border-box;
}

.top-navigate {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.top-navigate .logout{
  position: absolute;
  margin: 0 20rpx;
  padding: 0;
  width: 100rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFF;
  background-image: linear-gradient(to right, #ff8d41 , #fda240);
}
.top-navigate .title-text{
  width: 100%;
  text-align: center;
  font-weight: 600;
  color: #FFF;
}
/** 背景 */
.login-bg{
  z-index: -1;
  height: 250rpx;
  position: absolute;
  width: 100%;
  opacity: 0.8;
  top: 0;
  left: 0;
}

/** 信息面板 */
.infomation{
  z-index: 100;
  width: 95vw;
  height: 180rpx;
  margin: 30rpx auto;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 20rpx rgba(0,0,0,0.2);
  background-color: #FFF;

  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.infomation view{
  text-align: center;
}

.notice{
  position: relative;
  margin-bottom: 30rpx;
  color: #3b4594;
}

.message-info{
  width: 100%;
}
.message-info view{
  width:100%;
  font-size: 30rpx;
  text-align: center;
  color: #FFF;
}

.course-info{
  height: 280rpx;
  display: flex;

  margin: 40rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.thumbnail{
  width: 340rpx;
  height: 240rpx;

  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.thumbnail image {
  width: 340rpx;
  height: 235rpx;
}
.now-course{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;

  box-sizing: border-box;
  padding: 40rpx 10rpx;
}
.operate{
  width: 100%;
  margin: 20rpx auto;
  font-size: 32rpx;
}
.course-name{
  font-size: 30rpx;
  text-indent: 10rpx;
  color: #888;
}
.all-percent-text{
  font-size: 30rpx;
  text-indent: 10rpx;
  color: #222;
}

.info {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info .text{
  color: #222;
  font-size: 27rpx;
}
.info-title{
  margin:0 20rpx;
  text-align:center;
  color: #8997ff;
  font-size: 26rpx;
}

.progress-info{
  height: 420rpx;
  margin: 40rpx auto;
}
.notice-footer{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;

}
.notice-footer text{
  margin: 6rpx 15rpx;
  color: #333;
}