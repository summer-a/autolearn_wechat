.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
}
.cousre-info{
  width: 100vw;
  height: 240rpx;
  display: flex;
}
.thumbnail{
  width: 360rpx;
  height: 240rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}
.thumbnail image {
  width: 340rpx;
  height: 235rpx;
}
.info {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding-left: 10rpx;
}
.operate{
  width: 100%;
  margin: 20rpx 0;
}
.operate progress{
  margin-bottom: 20rpx;
}